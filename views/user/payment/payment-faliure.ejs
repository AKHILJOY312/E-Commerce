<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payment Failed</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --bg-light: #F7F7F7;
            --primary: #FFB22C;
            --secondary: #854836;
            --text-dark: #000000;
            --text-light: #F7F7F7;
            --text-muted: #666666;
            --error: #d9534f;
            --error-light: rgba(217, 83, 79, 0.1);
            --accent-gradient: linear-gradient(135deg, var(--secondary), var(--error));
        }
        
        body {
            display: flex;
            align-items: center;
            min-height: 100vh;
            padding: 1rem 0.5rem;
            background-color: var(--bg-light);
            background-image: 
                radial-gradient(rgba(133, 72, 54, 0.05) 1px, transparent 1px),
                radial-gradient(rgba(133, 72, 54, 0.05) 1px, transparent 1px);
            background-size: 30px 30px;
            background-position: 0 0, 15px 15px;
            font-family: system-ui, -apple-system, "Segoe UI", Roboto, sans-serif;
        }
        
        .failure-card {
            border-radius: 16px;
            border: none;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
            overflow: hidden;
            transition: transform 0.3s ease;
            max-width: 100%;
        }
        
        .failure-card:hover {
            transform: translateY(-5px);
        }
        
        .card-header-failure {
            background: var(--accent-gradient);
            height: 80px;
            position: relative;
        }
        
        .failure-icon {
            position: absolute;
            left: 50%;
            transform: translate(-50%, 50%);
            background: white;
            width: 80px;
            height: 80px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 5px 15px rgba(217, 83, 79, 0.3);
        }
        
        .failure-icon i {
            color: var(--error);
            font-size: 36px;
        }
        
        .card-body {
            padding-top: 60px;
            padding-left: 1.5rem;
            padding-right: 1.5rem;
        }
        
        @media (max-width: 576px) {
            .card-body {
                padding-left: 1rem;
                padding-right: 1rem;
            }
            
            .failure-icon {
                width: 70px;
                height: 70px;
            }
            
            .failure-icon i {
                font-size: 30px;
            }
        }
        
        .display-title {
            font-weight: 700;
            color: var(--text-dark);
            margin-bottom: 1rem;
            font-size: calc(1.5rem + 1vw);
        }
        
        @media (max-width: 768px) {
            .display-title {
                font-size: 1.5rem;
            }
        }
        
        .lead {
            font-size: 1.1rem;
            color: var(--text-muted);
        }
        
        @media (max-width: 576px) {
            .lead {
                font-size: 1rem;
            }
        }
        
        .error-details {
            background-color: var(--error-light);
            border-radius: 12px;
            padding: 1.5rem;
            margin: 1.5rem 0;
            border-left: 4px solid var(--error);
        }
        
        @media (max-width: 576px) {
            .error-details {
                padding: 1rem;
            }
        }
        
        .error-detail-row {
            display: flex;
            justify-content: space-between;
            padding: 0.5rem 0;
            border-bottom: 1px dashed rgba(0,0,0,0.1);
            flex-wrap: wrap;
        }
        
        @media (max-width: 400px) {
            .error-detail-row {
                flex-direction: column;
                gap: 0.25rem;
            }
        }
        
        .error-detail-row:last-child {
            border-bottom: none;
        }
        
        .detail-label {
            color: var(--text-dark);
            font-weight: 600;
        }
        
        .detail-value {
            font-weight: 500;
            color: var(--error);
        }
        
        .btn-action {
            border-radius: 8px;
            padding: 0.8rem 1.5rem;
            font-weight: 600;
            letter-spacing: 0.5px;
            transition: all 0.3s ease;
        }
        
        @media (max-width: 576px) {
            .btn-action {
                padding: 0.6rem 1rem;
                font-size: 0.9rem;
                width: 100%;
                margin-bottom: 0.5rem;
            }
        }
        
        .btn-primary {
            background: var(--primary);
            border: none;
            color: var(--text-dark);
        }
        
        .btn-primary:hover, .btn-primary:focus {
            background: #e69b18;
            box-shadow: 0 5px 15px rgba(255, 178, 44, 0.4);
            transform: translateY(-2px);
            color: var(--text-dark);
        }
        
        .btn-outline-secondary {
            color: var(--secondary);
            border: 2px solid var(--secondary);
            background: transparent;
        }
        
        .btn-outline-secondary:hover, .btn-outline-secondary:focus {
            background-color: var(--secondary);
            border-color: var(--secondary);
            color: var(--text-light);
        }
        
        .btn-error {
            background: var(--error);
            border: none;
            color: white;
        }
        
        .btn-error:hover, .btn-error:focus {
            background: #c9302c;
            box-shadow: 0 5px 15px rgba(217, 83, 79, 0.4);
            transform: translateY(-2px);
            color: white;
        }
        
        .support-link {
            text-decoration: none;
            color: var(--secondary);
            font-weight: 500;
            transition: color 0.2s ease;
        }
        
        .support-link:hover {
            color: var(--primary);
            text-decoration: underline;
        }
        
        .help-section {
            background-color: rgba(255, 178, 44, 0.1);
            border-radius: 12px;
            padding: 1.5rem;
            margin: 1.5rem 0;
        }
        
        @media (max-width: 576px) {
            .help-section {
                padding: 1rem;
            }
        }
        
        .help-item {
            margin-bottom: 1rem;
            padding-left: 2rem;
            position: relative;
        }
        
        .help-item i {
            position: absolute;
            left: 0;
            top: 0.25rem;
            color: var(--primary);
        }
        
        .help-item:last-child {
            margin-bottom: 0;
        }
        
        .help-item h6 {
            font-weight: 600;
            margin-bottom: 0.25rem;
            color: var(--text-dark);
        }
        
        .help-item p {
            color: var(--text-muted);
            font-size: 0.9rem;
            margin-bottom: 0;
        }
        
        @media (min-width: 992px) {
            .container {
                max-width: 900px;
            }
        }
        
        /* Error animation */
        @keyframes errorShake {
            0%, 100% {
                transform: translateX(0);
            }
            20%, 60% {
                transform: translateX(-5px);
            }
            40%, 80% {
                transform: translateX(5px);
            }
        }
        
        .error-shake {
            animation: errorShake 0.5s ease-in-out;
        }
        
        .timer-bar {
            height: 4px;
            background-color: var(--primary);
            width: 100%;
            margin-top: 1rem;
            border-radius: 2px;
            position: relative;
            overflow: hidden;
        }
        
        .timer-progress {
            position: absolute;
            height: 100%;
            background-color: var(--secondary);
            width: 0%;
            transition: width 1s linear;
        }
    </style>
</head>
<body>
    <div class="container failure-page-container">
        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-8">
                <div class="card failure-card" id="failureCard">
                    <div class="card-header-failure">
                        <div class="failure-icon">
                            <i class="fas fa-exclamation-triangle"></i>
                        </div>
                    </div>
                    <div class="card-body text-center">
                        <h1 class="display-title">Payment Failed</h1>
                        <p class="lead mb-4">
                            We encountered an issue while processing your payment. Please review the details below.
                        </p>
                        
                        <div class="error-details">
                            <div class="error-detail-row">
                                <span class="detail-label">Transaction ID</span>
                                <span class="detail-value" id="transactionId">TRX-12345XYZ</span>
                            </div>
                            <div class="error-detail-row">
                                <span class="detail-label">Date</span>
                                <span class="detail-value" id="errorDate">April 14, 2025</span>
                            </div>
                            <div class="error-detail-row">
                                <span class="detail-label">Error Code</span>
                                <span class="detail-value">ERR-5001</span>
                            </div>
                            <div class="error-detail-row">
                                <span class="detail-label">Error Message</span>
                                <span class="detail-value">Insufficient funds / Card declined</span>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-12">
                                <div class="help-section">
                                    <h5 class="mb-3 text-start">What You Can Do</h5>
                                    <div class="help-item text-start">
                                        <i class="fas fa-credit-card"></i>
                                        <h6>Check your payment details</h6>
                                        <p>Verify your card information, expiration date, and CVV code.</p>
                                    </div>
                                    <div class="help-item text-start">
                                        <i class="fas fa-university"></i>
                                        <h6>Ensure sufficient funds</h6>
                                        <p>Make sure your account has enough funds to cover the transaction.</p>
                                    </div>
                                    <div class="help-item text-start">
                                        <i class="fas fa-sync-alt"></i>
                                        <h6>Try a different payment method</h6>
                                        <p>Use an alternative card or payment option for your purchase.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="timer-section mt-4">
                            <p class="text-muted mb-2">You'll be redirected to payment page in <span id="countdown">15</span> seconds</p>
                            <div class="timer-bar">
                                <div class="timer-progress" id="timerProgress"></div>
                            </div>
                        </div>
                        
                        <div class="d-grid gap-3 d-md-flex justify-content-center my-4">
                            <a href="/checkout" class="btn btn-error btn-action px-4">
                                <i class="fas fa-sync-alt me-2"></i>Try Again
                            </a>
                            <a href="/cart" class="btn btn-outline-secondary btn-action px-4">
                                <i class="fas fa-shopping-cart me-2"></i>Review Cart
                            </a>
                        </div>
                        
                        <p class="text-body-secondary mt-4">
                            Need help with your payment? <a href="/support" class="support-link">Contact our support team</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Set current date for error log
            const today = new Date();
            const options = { year: 'numeric', month: 'long', day: 'numeric' };
            document.getElementById('errorDate').textContent = today.toLocaleDateString('en-US', options);
            
            // Generate random transaction ID
            const randomTrxId = 'TRX-' + Math.random().toString(36).substring(2, 8).toUpperCase();
            document.getElementById('transactionId').textContent = randomTrxId;
            
            // Error animation effect
            const failureCard = document.getElementById('failureCard');
            setTimeout(() => {
                failureCard.classList.add('error-shake');
            }, 500);
            
            // Check if screen size changes for responsive adaptations
            function checkScreenSize() {
                const buttons = document.querySelectorAll('.btn-action');
                if (window.innerWidth <= 576) {
                    buttons.forEach(btn => {
                        btn.classList.add('w-100');
                    });
                } else {
                    buttons.forEach(btn => {
                        btn.classList.remove('w-100');
                    });
                }
            }
            
            // Run on load and window resize
            checkScreenSize();
            window.addEventListener('resize', checkScreenSize);
            
            // Countdown timer
            let timeLeft = 15;
            const countdownElement = document.getElementById('countdown');
            const timerProgressElement = document.getElementById('timerProgress');
            
            function updateCountdown() {
                timeLeft--;
                countdownElement.textContent = timeLeft;
                timerProgressElement.style.width = ((15 - timeLeft) / 15 * 100) + '%';
                
                if (timeLeft <= 0) {
                    clearInterval(timer);
                    // In a real application, you'd redirect here:
                    // window.location.href = '/checkout';
                }
            }
            
            const timer = setInterval(updateCountdown, 1000);
        });
    </script>
</body>
</html>