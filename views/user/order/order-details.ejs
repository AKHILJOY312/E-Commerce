<%- include("../../views/partials/user/header.ejs") %>

<style>
    body {
        background-color: #F7F7F7;
        color: #000000;
    }
    .order-title {
        color: #854836;
        margin-bottom: 1rem;
    }
    .order-card {
        background-color: #FFFFFF;
        border: 1px solid #E0E0E0;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        padding: 1.5rem;
        margin-bottom: 1.5rem;
    }
    .order-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 1px solid #E0E0E0;
        padding-bottom: 1rem;
        margin-bottom: 1rem;
    }
    .order-header .actions {
        display: flex;
        gap: 0.5rem;
    }
    .order-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 1.5rem;
    }
    .order-item {
        display: flex;
        padding: 1rem 0;
        border-bottom: 1px solid #F0F0F0;
    }
    .order-item:last-child {
        border-bottom: none;
    }
    .order-item-img {
        width: 70px;
        height: 70px;
        object-fit: cover;
        border-radius: 6px;
        margin-right: 1rem;
    }
    .order-item-details {
        flex: 1;
    }
    .tracking-container {
        display: flex;
        overflow-x: auto;
        margin: 1rem 0;
    }
    .tracking-step {
        display: flex;
        flex-direction: column;
        align-items: center;
        flex: 1;
        min-width: 100px;
        position: relative;
    }
    .tracking-step:not(:last-child)::after {
        content: '';
        position: absolute;
        top: 12px;
        width: 100%;
        right: -50%;
        height: 2px;
        background-color: #E0E0E0;
        z-index: 0;
    }
    .tracking-step.completed:not(:last-child)::after {
        background-color: #28a745;
    }
    .tracking-step .circle {
        width: 24px;
        height: 24px;
        border-radius: 50%;
        background-color: #E0E0E0;
        z-index: 1;
        margin-bottom: 0.5rem;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .tracking-step.active .circle {
        background-color: #FFB22C;
        animation: pulse 1.5s infinite;
    }
    .tracking-step.completed .circle {
        background-color: #28a745;
        color: white;
    }
    .tracking-step.cancelled .circle {
        background-color: #dc3545;
        color: white;
    }
    .tracking-step.completed .circle:after {
        content: 'âœ“';
        color: white;
        font-size: 14px;
    }
    .tracking-info {
        text-align: center;
        font-size: 0.85rem;
    }
    .tracking-date {
        font-size: 0.75rem;
        color: #666;
    }
    .btn-primary {
        background-color: #FFB22C;
        color: #000000;
        border: none;
    }
    .btn-secondary {
        background-color: #854836;
        color: #FFFFFF;
        border: none;
    }
    .btn-primary:hover, .btn-secondary:hover {
        opacity: 0.9;
    }
    .badge {
        font-size: 0.75rem;
        padding: 0.35em 0.65em;
        border-radius: 10px;
    }
    .badge-confirmed {
        background-color: #FFB22C;
        color: #000;
    }
    .badge-intransit {
        background-color: #17a2b8;
        color: #fff;
    }
    .badge-delivered {
        background-color: #28a745;
        color: #fff;
    }
    .badge-cancelled {
        background-color: #dc3545;
        color: #fff;
    }
    .info-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 0.5rem;
    }
    .info-row:last-child {
        margin-bottom: 0;
    }
    .address-card {
        position: relative;
        padding: 1rem;
        border: 1px solid #E0E0E0;
        border-radius: 6px;
        background-color: #FAFAFA;
    }
    .order-price {
        font-weight: 600;
        font-size: 1.1rem;
        color: #854836;
    }
    @keyframes pulse {
        0% { box-shadow: 0 0 0 0 rgba(255, 178, 44, 0.7); }
        70% { box-shadow: 0 0 0 10px rgba(255, 178, 44, 0); }
        100% { box-shadow: 0 0 0 0 rgba(255, 178, 44, 0); }
    }
</style>
