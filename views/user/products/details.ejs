<%- include("../../views/partials/user/header.ejs") %>
<style>
  /* Add to your existing styles */
  .variant-thumbnails {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    margin-top: 10px;
  }
  
  .variant-thumbnail {
    width: 50px;
    height: 50px;
    border: 1px solid #e5e5e5;
    border-radius: 4px;
    overflow: hidden;
    position: relative;
    cursor: pointer;
    transition: all 0.3s;
  }
  
  .variant-thumbnail.active {
    border: 2px solid #e53637;
  }
  
  .variant-thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .variant-thumbnail:hover {
    transform: scale(1.05);
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
  }
</style>
<style>
  
  .color-link {
    display: block;
    width: 100%;
    height: 100%;
  }
  .product__details__option__color label {
    cursor: pointer;
  }

  /* Zoom Styles */
  .product__details__pic__item {
    position: relative;
    overflow: visible; /* Changed from hidden to visible */
  }

  .zoomable {
    width: 100%;
    height: auto;
    cursor: crosshair;
  }

  .zoom-lens {
    position: absolute;
    width: 100px;
    height: 100px;
    background: rgba(0, 0, 0, 0.2);
    border: 1px solid #ccc;
    pointer-events: none;
    display: none; /* Hidden by default */
  }

  .zoom-result {
    position: absolute;
    top: 0;
    left: 105%; /* Adjusted to ensure it’s visible next to the image */
    width: 400px;
    height: 400px;
    background-size: 200% 200%; /* Zoom factor */
    border: 1px solid #ccc;
    display: none; /* Hidden by default */
    z-index: 1000;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
    background-color: #fff; /* Added to ensure visibility */
  }
</style>
<!-- Shop Details Section Begin -->
<section class="shop-details">
  <div class="product__details__pic">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="product__details__breadcrumb">
            <a href="/">Home</a>
            <a href="/shop">Shop</a>
            <span>Product Details</span>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-3 col-md-3">
          <ul class="nav nav-tabs" role="tablist">
            <% const placeholderImage =
            'https://placehold.co/400x600?text=Add+image'; %> <% if
            (!activeVariant.product_image || activeVariant.product_image.length
            === 0) { %>
            <li class="nav-item">
              <a
                class="nav-link active"
                data-toggle="tab"
                href="#tabs-1"
                role="tab"
              >
                <div
                  class="product__thumb__pic set-bg"
                  data-setbg="<%= placeholderImage %>"
                ></div>
              </a>
            </li>
            <% } else { %> <% activeVariant.product_image.slice(0,
            10).forEach((image, index) => { %>
            <li class="nav-item">
              <a
                class="nav-link <%= index === 0 ? 'active' : '' %>"
                data-toggle="tab"
                href="#tabs-<%= index + 1 %>"
                role="tab"
              >
                <div
                  class="product__thumb__pic set-bg"
                  data-setbg="<%= image || placeholderImage %>"
                ></div>
              </a>
            </li>
            <% }) %> <% } %>
          </ul>
        </div>
        <div class="col-lg-6 col-md-9">
          <div class="tab-content">
            <% if (!activeVariant.product_image ||
            activeVariant.product_image.length === 0) { %>
            <div class="tab-pane active" id="tabs-1" role="tabpanel">
              <div class="product__details__pic__item">
                <img
                  src="<%= placeholderImage %>"
                  alt="No image found"
                  class="zoomable"
                />
                <div class="zoom-lens"></div>
                <div class="zoom-result" id="zoom-result-1"></div>
              </div>
            </div>
            <% } else { %> <% activeVariant.product_image.slice(0,
            10).forEach((image, index) => { %>
            <div
              class="tab-pane <%= index === 0 ? 'active' : '' %>"
              id="tabs-<%= index + 1 %>"
              role="tabpanel"
            >
              <div class="product__details__pic__item">
                <img
                  src="<%= image || placeholderImage %>"
                  alt="<%= product.name %>"
                  class="zoomable"
                />
                <div class="zoom-lens"></div>
                <div
                  class="zoom-result"
                  id="zoom-result-<%= index + 1 %>"
                ></div>
              </div>
            </div>
            <% }) %> <% } %>
