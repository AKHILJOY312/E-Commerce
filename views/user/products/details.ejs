<%- include("../../views/partials/user/header.ejs") %>



<style>
  .color-link {
    display: block;
    width: 100%;
    height: 100%;
  }
  .product__details__option__color label {
    cursor: pointer;
  }
</style>
    <!-- Shop Details Section Begin -->
    <section class="shop-details">
      <div class="product__details__pic">
        <div class="container">
          <div class="row">
            <div class="col-lg-12">
              <div class="product__details__breadcrumb">
                <a href="/">Home</a>
                <a href="/shop">Shop</a>
                <span>Product Details</span>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-3 col-md-3">
              <ul class="nav nav-tabs" role="tablist">
                <% const placeholderImage = 'https://placehold.co/400x600?text=Add+image'; %>
                <% if (!activeVariant.product_image || activeVariant.product_image.length === 0) { %>
                  <li class="nav-item">
                    <a class="nav-link active" data-toggle="tab" href="#tabs-1" role="tab">
                      <div class="product__thumb__pic set-bg" data-setbg="<%= placeholderImage %>"></div>
                    </a>
                  </li>
                <% } else { %>
                  <% activeVariant.product_image.slice(0, 10).forEach((image, index) => { %>
                    <li class="nav-item">
                      <a class="nav-link <%= index === 0 ? 'active' : '' %>" data-toggle="tab" href="#tabs-<%= index + 1 %>" role="tab">
                        <div class="product__thumb__pic set-bg" data-setbg="<%= image || placeholderImage %>"></div>
                      </a>
                    </li>
                  <% }) %>
                <% } %>
              </ul>
            </div>
            <div class="col-lg-6 col-md-9">
              <div class="tab-content">
                <% if (!activeVariant.product_image || activeVariant.product_image.length === 0) { %>
                  <div class="tab-pane active" id="tabs-1" role="tabpanel">
                    <div class="product__details__pic__item">
                      <img src="<%= placeholderImage %>" alt="No image found">
                    </div>
                  </div>
                <% } else { %>
                  <% activeVariant.product_image.slice(0, 10).forEach((image, index) => { %>
                    <div class="tab-pane <%= index === 0 ? 'active' : '' %>" id="tabs-<%= index + 1 %>" role="tabpanel">
                      <div class="product__details__pic__item">
                        <img src="<%= image || placeholderImage %>" alt="<%= product.name %>">
                      </div>
                    </div>
                  <% }) %>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="product__details__content">
        <div class="container">
          <div class="row d-flex justify-content-center">
            <div class="col-lg-8">
              <div class="product__details__text">
                <h4><%= product.name %> - <%= product.brand || '' %></h4>
                <div class="rating">
                  <% for(let i = 1; i <= 5; i++) { %>
                    <i class="fa <%= i <= avgRating ? 'fa-star' : 'fa-star-o' %>"></i>
                  <% } %>
                  <span> - <%= reviews.length %> Reviews</span>
                </div>
                <h3>₹<%= activeVariant.sale_price %> <span><%= activeVariant.price !== activeVariant.sale_price ? '₹' + activeVariant.price : '' %></span></h3>
                <p><%= activeVariant.description || 'No description available.' %></p>
                <div class="product__details__option">
                  <div class="product__details__option__size">
                    <span>Size:</span>
                    <% variants.forEach((variant, index) => { %>
                      <label class="<%= variant._id.toString() === activeVariant._id.toString() ? 'active' : '' %>" for="size-<%= variant._id %>">
                        <%= variant.size %>
                        <input type="radio" id="size-<%= variant._id %>" name="size" value="<%= variant._id %>" <%= variant._id.toString() === activeVariant._id.toString() ? 'checked' : '' %>>
                      </label>
                    <% }) %>
                  </div>
                  <div class="product__details__option__color">
                    <span>Color:</span>
                    <% variants.forEach((variant, index) => { %>
                      <label class="c-<%= index + 1 %>" for="color-<%= variant._id %>">
                        <a href="/product/<%= product._id %>?variant=<%= variant._id %>" class="color-link" style="display: block; width: 100%; height: 100%;">
                          <input type="radio" id="color-<%= variant._id %>" name="color" value="<%= variant.color %>" <%= variant._id.toString() === activeVariant._id.toString() ? 'checked' : '' %> hidden>
                        </a>
                      </label>
                    <% }) %>
                  </div>
                </div>
                <div class="product__details__cart__option">
                  <div class="quantity">
                    <div class="pro-qty">
                      <input type="text" value="1">
                    </div>
                  </div>
                  <a href="#" class="primary-btn" data-product-id="<%= product._id %>" data-variant-id="<%= activeVariant._id %>">Add to Cart</a>
                </div>
                <div class="product__details__btns__option">
                  <a href="#"><i class="fa fa-heart"></i> Add to Wishlist</a>
                  <a href="#"><i class="fa fa-exchange"></i> Add to Compare</a>
                </div>
                <div class="product__details__last__option">
                  <h5><span>Guaranteed Safe Checkout</span></h5>
                  <img src="/img/shop-details/details-payment.png" alt="">
                  <ul>
                    <li><span>SKU:</span> <%= activeVariant.sku || 'N/A' %></li>
                    <li><span>Categories:</span> <%= category %></li>
                    <li><span>Tag:</span> <%= product.brand || 'N/A' %>, Clothing</li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-12">
              <div class="product__details__tab">
                <ul class="nav nav-tabs" role="tablist">
                  <li class="nav-item">
                    <a class="nav-link active" data-toggle="tab" href="#tabs-5" role="tab">Description</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#tabs-6" role="tab">Customer Reviews (<%= reviews.length %>)</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#tabs-7" role="tab">Additional Information</a>
                  </li>
                </ul>
                <div class="tab-content">
                  <div class="tab-pane active" id="tabs-5" role="tabpanel">
                    <div class="product__details__tab__content">
                      <p><%= activeVariant.description || 'No description available.' %></p>
                    </div>
                  </div>
                  <div class="tab-pane" id="tabs-6" role="tabpanel">
                    <div class="product__details__tab__content">
                      <% if (reviews.length > 0) { %>
                        <% reviews.forEach(review => { %>
                          <div class="product__details__tab__content__item">
                            <h5><%= review.title %> - <%= review.user_id.name %></h5>
                            <div class="rating">
                              <% for(let i = 1; i <= 5; i++) { %>
                                <i class="fa <%= i <= review.rating ? 'fa-star' : 'fa-star-o' %>"></i>
                              <% } %>
                            </div>
                            <p><%= review.comment || 'No comment provided.' %></p>
                            <small><%= review.created_at.toLocaleDateString() %></small>
                          </div>
                        <% }) %>
                      <% } else { %>
                        <p>No reviews yet.</p>
                      <% } %>
                    </div>
                  </div>
                  <div class="tab-pane" id="tabs-7" role="tabpanel">
                    <div class="product__details__tab__content">
                      <div class="product__details__tab__content__item">
                        <h5>Material Used</h5>
                        <p><%= activeVariant.material || 'Not specified.' %></p>
                      </div>
                      <div class="product__details__tab__content__item">
                        <h5>Available Sizes</h5>
                        <p><%= variants.map(v => v.size).join(', ') %></p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    
    <!-- JavaScript for set-bg and color redirect -->
    
    
   
    <!-- Shop Details Section End -->

