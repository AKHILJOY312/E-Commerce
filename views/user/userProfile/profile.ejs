  style="display: none"
>
  <div class="card-body">
    <h5 class="mb-4">Recent Orders</h5>

    <% if (recentOrders && recentOrders.length > 0) { %>
      <% recentOrders.forEach(order => { %>
        <div class="border p-3 mb-3 rounded d-flex justify-content-between align-items-center">
          <div>
            <h6>Order #<%= order._id.toString().slice(-5).toUpperCase() %></h6>
            <p class="text-muted mb-0">Placed: <%= new Date(order.created_at).toLocaleDateString() %></p>
          </div>
          <div class="text-end">
            <span class="badge
              <% if (order.status === 'delivered') { %> bg-success
              <% } else if (order.status === 'intransit') { %> bg-info text-dark
              <% } else if (order.status === 'confirmed') { %> bg-primary
              <% } else if (order.status === 'cancelled') { %> bg-danger
              <% } %> mb-1">
              <%= order.status.charAt(0).toUpperCase() + order.status.slice(1) %>
            </span>
            <p class="mb-0 fw-bold">$<%= parseFloat(order.total_amount).toFixed(2) %></p>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <p class="text-muted">No recent orders found.</p>
    <% } %>
  </div>
