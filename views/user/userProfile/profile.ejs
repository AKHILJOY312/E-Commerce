<%- include("../../views/partials/user/header.ejs") %>

<!-- Bootstrap 5 CDN (CSS) -->
<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
  rel="stylesheet"
/>
<!-- Font Awesome -->
<link
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
  rel="stylesheet"
/>
<!-- Bootstrap Icons -->
<link
  href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
  rel="stylesheet"
/>

<style>
  body {
    background-color: #f7f7f7; /* Light Gray background */
    color: #000000; /* Black text */
  }

  .profile-card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    background-color: #f7f7f7; /* Light Gray card background */
    border: 1px solid #854836; /* Brown border */
  }

  .profile-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.1);
  }

  .profile-img {
    border: 4px solid #854836; /* Brown border for profile image */
    transition: transform 0.3s ease;
  }

  .profile-img:hover {
    transform: scale(1.05);
  }

  .profile-nav .nav-link {
    padding: 10px 15px;
    font-weight: 500;
    border-radius: 8px;
    color: #000000; /* Black text */
    transition: background-color 0.3s, color 0.3s;
  }

  .profile-nav .nav-link:hover {
    background-color: #ffb22c; /* Golden Yellow on hover */
    color: #000000; /* Black text */
  }

  .profile-nav .nav-link.active {
    background-color: #ffb22c; /* Golden Yellow for active */
    color: #000000; /* Black text */
  }

  .profile-nav .nav-link i {
    width: 20px;
    text-align: center;
  }

  .profile-section p {
    margin-bottom: 10px;
    font-size: 16px;
    color: #000000; /* Black text */
  }

  .profile-section .badge {
    font-size: 14px;
    padding: 5px 10px;
    border-radius: 8px;
  }

  .breadcrumb-option {
    background-color: #f7f7f7; /* Light Gray background */
  }

  .breadcrumb__links a,
  .breadcrumb__links span {
    color: #854836; /* Brown for breadcrumb links */
  }

  .card-title,
  .card-subtitle {
    color: #854836; /* Brown for card titles and subtitles */
  }

  .text-primary {
    color: #ffb22c !important; /* Golden Yellow for primary text */
  }

  .btn-outline-primary {
    color: #ffb22c; /* Golden Yellow text */
    border-color: #ffb22c; /* Golden Yellow border */
  }

  .btn-outline-primary:hover {
    background-color: #ffb22c; /* Golden Yellow background on hover */
    color: #000000; /* Black text */
  }

  .badge.bg-success {
    background-color: #ffb22c !important; /* Golden Yellow for success badges */
    color: #000000; /* Black text */
  }

  .badge.bg-warning {
    background-color: #854836 !important; /* Brown for warning badges */
    color: #f7f7f7; /* Light Gray text */
  }

  .text-muted {
    color: #854836 !important; /* Brown for muted text */
  }
  .settings-list {
    list-style: none;
    padding: 0;
  }

  .settings-list .list-group-item {
    background-color: #f7f7f7; /* Light Gray background */
    color: #000000; /* Black text */
    border: 1px solid #854836; /* Brown border */
    padding: 10px 15px;
    margin-bottom: 5px;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.3s ease,
      box-shadow 0.3s ease;
  }

  .settings-list .list-group-item:hover {
    background-color: #ffb22c; /* Golden Yellow on hover */
    color: #000000; /* Black text */
    transform: translateY(-2px);
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  }

  
</style>
<style>
  .referral-code-container {
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
  }
  
  .share-btn {
    transition: all 0.3s ease;
  }
  
  .share-btn:hover {
    transform: translateY(-2px);
  }
  
  #referralCode {
    background-color: rgba(255, 255, 255, 0.9);
    border: none;
    font-weight: bold;
    letter-spacing: 1px;
    transition: all 0.3s ease;
  }
  
  #referralCode:focus {
    background-color: white;
    box-shadow: none;
  }
  
  .how-it-works {
    border-left: 4px solid #FFB22C;
  }
  
  /* Animation for copy effect */
  @keyframes highlightSuccess {
    0% { background-color: white; }
    50% { background-color: rgba(40, 167, 69, 0.2); }
    100% { background-color: white; }
  }
  
  .border-success {
    animation: highlightSuccess 1s ease;
  }
  a{
    text-decoration: none;
  }
</style>
<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-option bg-light py-3 mb-4">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="breadcrumb__text">
          <h4>User Profile</h4>
          <div class="breadcrumb__links">
            <a href="/"><i class="bi bi-house-door"></i> Home</a>
            <span class="mx-2">/</span>
            <span>User Profile</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Breadcrumb Section End -->

<!-- Profile Section Begin -->
<section class="profile-container py-4">
  <div class="container">
    <div class="row">
      <!-- Profile Navigation -->
      <div class="col-lg-4 mb-4">
        <div class="card profile-card shadow-lg border-0 rounded-4">
          <div class="card-body text-center">
            <!-- Profile Image -->
            <div class="mb-3">
              <img
                src="<%= user.profileImage || '/img/profiledemo.jpg' %>"
                alt="Profile Image"
                class="rounded-circle profile-img shadow"
                width="120"
                height="120"
                style="object-fit: cover"
              />
            </div>
            <h4 class="card-title fw-semibold"><%= user.name %></h4>
            <p class="card-subtitle text-muted mb-3"><%= user.email %></p>

            <!-- Nav -->
            <ul class="nav nav-pills flex-column text-start profile-nav">
              <li class="nav-item">
                <a class="nav-link active" href="#account"
                  ><i class="fas fa-user me-2"></i> Account</a
                >
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#orders"
                  ><i class="fas fa-shopping-bag me-2"></i> Orders
                  <span class="badge bg-warning text-light ms-2"
                    ><%= orderCount%></span
                  >
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#Address"
                  ><i class="fas fa-map-marker-alt me-2"></i> Address</a
                >
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#coupons"
                  ><i class="fas fa-tags me-2"></i> Coupons</a
                >
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#Referrals"
                  ><i class="fas fa-user-friends me-2"></i> Referrals</a
                >
              </li>

              <li class="nav-item">
                <a class="nav-link" href="#settings"
                  ><i class="fas fa-cog me-2"></i> Settings</a
                >
              </li>
            </ul>

            <!-- Shopping Stats -->
            <!-- <div class="row text-center mt-4">
              <div class="col-4">
                <h6 class="fw-bold text-primary">â‚¹ 1,234</h6>
                <small class="text-muted">Spent</small>
              </div>
              <div class="col-4">
                <h6 class="fw-bold text-primary">15</h6>
                <small class="text-muted">Orders</small>
              </div>
              <div class="col-4">
                <h6 class="fw-bold text-primary">8</h6>
                <small class="text-muted">Saved</small>
              </div>
            </div> -->
          </div>
        </div>
      </div>

      <!-- Profile Content -->
      <div class="col-lg-8">
        <!-- Account Info -->
        <div class="card shadow mb-4 profile-section" id="account">
          <div class="card-body">
            <h5 class="mb-4">Account Information</h5>
            <div class="row">
              <div class="col-md-6">
                <p><strong>Name:</strong> <%= user.name %></p>
                <p>
                  <strong>Phone:</strong>
                  <%= (!user.phone || user.phone === "" || user.phone ===
                  "null") ? "Not provided" : user.phone %>
                </p>
                <p><strong>Email:</strong> <%= user.email %></p>
              </div>
              <div class="col-md-6">
                <p>
                  <strong>Account Created:</strong>
                  <%= new Date(user.created_at).toLocaleDateString() || "N/A" %>
                </p>
                <p>
                  <strong>Last Updated:</strong>
                  <%= new Date(user.updated_at).toLocaleDateString() || "N/A" %>
                </p>
                <p>
                  <strong>Status:</strong>
                  <span
                    class="badge <%= user.isActive ? 'bg-success' : 'bg-danger' %>"
                  >
                    <%= user.isActive ? 'Active' : 'Inactive' %>
                  </span>
                </p>
              </div>
            </div>
            <a href="/user/edit-profile" class="btn btn-outline-primary mt-3"
              >Edit Profile</a
            >
          </div>
        </div>

        <!-- Orders Section -->
        <div
          class="card shadow mb-4 profile-section"
          id="orders"
          style="display: none"
        >
          <div class="card-body">
            <h5 class="mb-4">Recent Orders</h5>

            <% if (recentOrders && recentOrders.length > 0) { %> <%
            recentOrders.forEach(order => { %>
            <div
              class="border p-3 mb-3 rounded d-flex justify-content-between align-items-center"
            >
              <div>
                <h6>
                  Order #<%= order.order_number %>
                </h6>
                <p class="text-muted mb-0">
                  Placed: <%= new Date(order.createdAt).toLocaleDateString() %>
                </p>
              </div>
              <div class="text-end">
                <span
                  class="badge <% if (order.status === 'delivered') { %> bg-success <% } else if (order.status === 'intransit') { %> bg-info text-dark <% } else if (order.status === 'confirmed') { %> bg-primary <% } else if (order.status === 'cancelled') { %> bg-danger <% } %> mb-1"
                >
                  <%= order.status.charAt(0).toUpperCase() +
                  order.status.slice(1) %>
                </span>
                <p class="mb-0 fw-bold">
                  â‚¹<%= parseFloat(order.total_amount).toFixed(2) %>
                </p>
              </div>
            </div>
            <% }) %> <% } else { %>
            <p class="text-muted">No recent orders found.</p>
            <% } %>
          </div>
        </div>


        <!-- Address Section -->
        <div
          class="card shadow mb-4 profile-section"
          id="Address"
          style="display: none"
        >
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-4">
              <h5 class="mb-0">Your Address</h5>
              <button
                class="btn btn-add-address"
                data-bs-toggle="modal"
                data-bs-target="#addAddressModal"
                style="background-color: #ffb22c; color: #000000; border: none"
              >
                Add Address
              </button>
            </div>

            <% if (addresses && addresses.length > 0) { %> <%
            addresses.forEach(address => { %>
            <div
              class="border p-3 mb-3 rounded"
              style="background-color: #f7f7f7; border-color: #854836"
            >
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <p class="mb-1">
                    <%= address.apartment %>, <%= address.building ?
                    address.building + ', ' : '' %> <%= address.street %>, <%=
                    address.city %>, <%= address.state %>, <%= address.country
                    %> - <%= address.zip_code %>
                  </p>
                  <% if (address.is_default) { %>
                  <span
                    class="badge"
                    style="background-color: #ffb22c; color: #000000"
                    >Default</span
                  >
                  <% } %>
                </div>
                <div>
                  <button
                    class="btn btn-sm btn-outline-primary me-2"
                    onclick="openEditModal('<%= address._id %>')"
                  >
                    Edit
                  </button>
                  <button
                    class="btn btn-sm btn-outline-danger"
                    onclick="deleteAddress('<%= address._id %>')"
                  >
                    Delete
                  </button>
                </div>
              </div>
            </div>
            <% }) %> <% } else { %>
            <p class="text-muted">No addresses saved yet.</p>
            <% } %>
          </div>
        </div>

        <!-- Add Address Modal -->
        <div
          class="modal fade"
          id="addAddressModal"
          tabindex="-1"
          aria-labelledby="addAddressModalLabel"
          aria-hidden="true"
        >
          <div class="modal-dialog">
            <div class="modal-content" style="background-color: #f7f7f7">
              <div
                class="modal-header"
                style="border-bottom: 1px solid #854836"
              >
                <h5
                  class="modal-title"
                  id="addAddressModalLabel"
                  style="color: #854836"
                >
                  Add New Address
                </h5>
                <button
                  type="button"
                  class="btn-close"
                  data-bs-dismiss="modal"
                  aria-label="Close"
                ></button>
              </div>
              <div class="modal-body">
                <form id="addAddressForm">
                  <div class="mb-3">
                    <label
                      for="apartment"
                      class="form-label"
                      style="color: #000000"
                      >Apartment*
                    </label>
                    <input
                      type="text"
                      class="form-control"
                      id="apartment"
                      required
                      style="border-color: #854836"
                    />
                  </div>
                  <div class="mb-3">
                    <label
                      for="building"
                      class="form-label"
                      style="color: #000000"
                      >Building</label
                    >
                    <input
                      type="text"
                      class="form-control"
                      id="building"
                      style="border-color: #854836"
                    />
                  </div>
                  <div class="mb-3">
                    <label
                      for="street"
                      class="form-label"
                      style="color: #000000"
                      >Street*
                    </label>
                    <input
                      type="text"
                      class="form-control"
                      id="street"
                      required
                      style="border-color: #854836"
                    />
                  </div>
                  <div class="mb-3">
                    <label for="city" class="form-label" style="color: #000000"
                      >City*
                    </label>
                    <input
                      type="text"
                      class="form-control"
                      id="city"
                      required
                      style="border-color: #854836"
                    />
                  </div>
                  <div class="mb-3">
                    <label for="state" class="form-label" style="color: #000000"
                      >State*
                    </label>
                    <input
                      type="text"
                      class="form-control"
                      id="state"
                      required
                      style="border-color: #854836"
                    />
                  </div>
                  <div class="mb-3">
                    <label
                      for="country"
                      class="form-label"
                      style="color: #000000"
                      >Country*
                    </label>
                    <input
                      type="text"
                      class="form-control"
                      id="country"
                      required
                      style="border-color: #854836"
                    />
                  </div>
                  <div class="mb-3">
                    <label
                      for="zip_code"
                      class="form-label"
                      style="color: #000000"
                      >ZIP Code*
                    </label>
                    <input
                      type="text"
                      class="form-control"
                      id="zip_code"
                      required
                      style="border-color: #854836"
                    />
                  </div>
                  <div class="mb-3 form-check">
                    <input
                      type="checkbox"
                      class="form-check-input"
                      id="is_default"
                      style="border-color: #854836"
                    />
                    <label
                      class="form-check-label"
                      for="is_default"
                      style="color: #000000"
                      >Set as default address</label
                    >
                  </div>
                </form>
              </div>
              <div class="modal-footer" style="border-top: 1px solid #854836">
                <button
                  type="button"
                  class="btn"
                  data-bs-dismiss="modal"
                  style="color: #854836"
                >
                  Cancel
                </button>
                <button
                  type="submit"
                  form="addAddressForm"
                  class="btn"
                  style="
                    background-color: #ffb22c;
                    color: #000000;
                    border: none;
                  "
                >
                  Save Address
                </button>
              </div>
            </div>
          </div>
        </div>

        <!-- Edit Address Modal -->
        <div
          class="modal fade"
          id="editAddressModal"
          tabindex="-1"
          aria-labelledby="editAddressModalLabel"
          aria-hidden="true"
        >
          <div class="modal-dialog">
            <div class="modal-content" style="background-color: #f7f7f7">
              <div
                class="modal-header"
                style="border-bottom: 1px solid #854836"
              >
                <h5
                  class="modal-title"
                  id="editAddressModalLabel"
                  style="color: #854836"
                >
                  Edit Address
                </h5>
                <button
                  type="button"
                  class="btn-close"
                  data-bs-dismiss="modal"
                  aria-label="Close"
                ></button>
              </div>
              <div class="modal-body">
                <form id="editAddressForm">
                  <input type="hidden" id="edit_address_id" />
                  <div class="mb-3">
                    <label
                      for="edit_apartment"
                      class="form-label"
                      style="color: #000000"
                      >Apartment*
                    </label>
                    <input
                      type="text"
                      class="form-control"
                      id="edit_apartment"
                      required
                      style="border-color: #854836"
                    />
                  </div>
                  <div class="mb-3">
                    <label
                      for="edit_building"
                      class="form-label"
                      style="color: #000000"
                      >Building</label
                    >
                    <input
                      type="text"
                      class="form-control"
                      id="edit_building"
                      style="border-color: #854836"
                    />
                  </div>
                  <div class="mb-3">
                    <label
                      for="edit_street"
                      class="form-label"
                      style="color: #000000"
                      >Street*
                    </label>
                    <input
                      type="text"
                      class="form-control"
                      id="edit_street"
                      required
                      style="border-color: #854836"
                    />
                  </div>
                  <div class="mb-3">
                    <label
                      for="edit_city"
                      class="form-label"
                      style="color: #000000"
                      >City*
                    </label>
                    <input
                      type="text"
                      class="form-control"
                      id="edit_city"
                      required
                      style="border-color: #854836"
                    />
                  </div>
                  <div class="mb-3">
                    <label
                      for="edit_state"
                      class="form-label"
                      style="color: #000000"
                      >State*
                    </label>
                    <input
                      type="text"
                      class="form-control"
                      id="edit_state"
                      required
                      style="border-color: #854836"
                    />
                  </div>
                  <div class="mb-3">
                    <label
                      for="edit_country"
                      class="form-label"
                      style="color: #000000"
                      >Country*
                    </label>
                    <input
                      type="text"
                      class="form-control"
                      id="edit_country"
                      required
                      style="border-color: #854836"
                    />
                  </div>
                  <div class="mb-3">
                    <label
                      for="edit_zip_code"
                      class="form-label"
                      style="color: #000000"
                      >ZIP Code*
                    </label>
                    <input
                      type="text"
                      class="form-control"
                      id="edit_zip_code"
                      required
                      style="border-color: #854836"
                    />
                  </div>
                  <div class="mb-3 form-check">
                    <input
                      type="checkbox"
                      class="form-check-input"
                      id="edit_is_default"
                      style="border-color: #854836"
                    />
                    <label
                      class="form-check-label"
                      for="edit_is_default"
                      style="color: #000000"
                      >Set as default address</label
                    >
                  </div>
                </form>
              </div>
              <div class="modal-footer" style="border-top: 1px solid #854836">
                <button
                  type="button"
                  class="btn"
                  data-bs-dismiss="modal"
                  style="color: #854836"
                >
                  Cancel
                </button>
                <button
                  type="submit"
                  form="editAddressForm"
                  class="btn"
                  style="
                    background-color: #ffb22c;
                    color: #000000;
                    border: none;
                  "
                >
                  Save Changes
                </button>
              </div>
            </div>
          </div>
        </div>
        <!-- Coupons Section -->
<div class="card shadow mb-4 profile-section" id="coupons" style="display: none">
  <div class="card-body">
    <h5 class="mb-4">Available Coupons</h5>
    
    <% if (availableCoupons && availableCoupons.length > 0) { %>
      <% availableCoupons.forEach(coupon => { %>
        <div class="border p-3 mb-3 rounded d-flex justify-content-between align-items-center">
          <div>
            <h6 class="text-primary"><%= coupon.code %></h6>
            <p class="text-muted mb-0">
              <%= coupon.discount_type === 'percentage' ? coupon.discount_value + '% off' : '$' + coupon.discount_value + ' off' %>
              <% if (coupon.min_order_value > 0) { %>
                on orders above $<%= coupon.min_order_value %>
              <% } %>
            </p>
            <small class="text-muted">Valid until: <%= new Date(coupon.end_date).toLocaleDateString() %></small>
          </div>
          <div class="text-end">
            <button class="btn btn-sm btn-outline-primary copy-coupon" data-coupon="<%= coupon.code %>">
              <i class="fas fa-copy me-1"></i> Copy
            </button>
          </div>
        </div>
      <% }); %>
    <% } else { %>
      <div class="alert alert-info">
        <i class="fas fa-info-circle me-2"></i> No coupons available at the moment. Check back later!
      </div>
    <% } %>
  </div>
</div>

<!-- Referrals Section -->
<div class="card shadow mb-4 profile-section" id="Referrals" style="display: none">
  <div class="card-body">
    <h5 class="mb-4">Your Referral Program</h5>
    
    <!-- Referral Stats -->
    <div class="row mb-4">
      <div class="col-md-4">
        <div class="card bg-light border-0 h-100">
          <div class="card-body text-center">
            <i class="fas fa-users fa-2x mb-3 text-primary"></i>
            <h6>Total Referrals</h6>
            <h3 class="mb-0"><%= user.referrals ? user.referrals.length : 0 %></h3>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card bg-light border-0 h-100">
          <div class="card-body text-center">
            <i class="fas fa-wallet fa-2x mb-3 text-success"></i>
            <h6>Earned Rewards</h6>
            <h3 class="mb-0">â‚¹<%= user.referralRewards ? user.referralRewards.reduce((total, reward) => reward.status === 'credited' ? total + reward.amount : total, 0).toFixed(2) : '0.00' %></h3>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card bg-light border-0 h-100">
          <div class="card-body text-center">
            <i class="fas fa-clock fa-2x mb-3 text-warning"></i>
            <h6>Pending Rewards</h6>
            <h3 class="mb-0">â‚¹<%= user.referralRewards ? user.referralRewards.reduce((total, reward) => reward.status === 'pending' ? total + reward.amount : total, 0).toFixed(2) : '0.00' %></h3>
          </div>
        </div>
